<h1> Myvids Users </h1>
<div class="row">
  <div class="col-md-8">
    <%= link_to "All Users", action: "index" %> |
    <%= link_to "Users awaiting approval", action: "index", approved: "false" %>
  </div>
</div>
<div class="row">
  <% @users.each do | user | %>
    <div class="col-md-8">
      <%= user.email %>
      <%= user.approved %>
      <%= link_to "Edit", edit_user_path(user)  %>
      <%= link_to "Delete", user_path(user), method: :delete, data: { confirm: 'Are you sure you want to delete this user?' } %>
    </div>
  <% end %>
</div>
