<!DOCTYPE html>
<html>
<head>
  <title>Myvids</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <ul class="nav nav-tabs">
      <li><%= link_to "Welcome", root_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to "Search", search_path %></li>
        <li><%= link_to "See All", movies_path %></li>
          <% if current_user.admin? %>
            <li><%= link_to "Add New", new_path %></li>
          <% end %>
      <% end %>
      <div class="pull-right user-info">
        <% if user_signed_in? %>
        <%= link_to current_user.username, user_path(current_user) %> |
        <%= link_to 'Edit login', edit_user_registration_path, :class => 'navbar-link' %> - <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
        <% else %>
        <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'  %> -
        <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %>
        <% end %>
      </div>
    </ul>
    <div class="flash">
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= flash[:notice] %>
        </div>
      <% end %>

      <% if flash[:alert] %>
        <div class="alert alert-danger alert-dismissible">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>
    <%= yield %>
  </div>
</body>
</html>
